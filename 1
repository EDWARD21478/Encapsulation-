class Employee:
    def __init__(self, emp_id, name, age, department, salary):
        self.emp_id = emp_id
        self.name = name
        self.age = age
        self.department = department
        self.salary = salary

    def get_details(self):
        return f"ID: {self.emp_id}, Name: {self.name}, Age: {self.age}, Department: {self.department}, Salary: {self.salary}"

    def update_department(self, new_department):
        self.department = new_department

    def update_salary(self, new_salary):
        self.salary = new_salary

    def apply_raise(self, percentage):
        self.salary += self.salary * (percentage / 100)

# Example usage
if __name__ == "__main__":
    emp = Employee(1, "John Doe", 30, "Engineering", 70000)
    print(emp.get_details())
    
    emp.update_department("Marketing")
    emp.update_salary(75000)
    emp.apply_raise(5)
    
    print(emp.get_details())
